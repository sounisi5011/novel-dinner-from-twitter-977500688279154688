  "scripts": {
    "clean": "del dest",
    "mkdir": "mkdirp dest",
    "build": "npm-run-all clean -p build:css build:js build:img -s build:html",
    "build:html": "run-s mkdir build:html:generate",
    "build:html:generate": "pug -O pug.config.js -p src/pug/main.pug < src/pug/main.pug | node bin/oembed-converter.js > dest/index.html",
    "build:css": "run-s build:css:generate",
    "build:css:generate": "postcss src/css/ --dir dest",
    "build:js": "run-s mkdir build:js:generate",
    "build:js:generate": "glob-exec --foreach --parallel 'src/js/*.js' -- uglifyjs '{{file}}' -cm -o 'dest/{{file.base}}' --source-map 'url=\\\"{{file.base}}.map\\\"'",
    "build:img": "npm-run-all mkdir -p build:img:*",
    "build:img:copy": "cpy 'src/img/*.*' '!src/img/*.md' dest",
    "build:img:generate": "node bin/ogp-image-generate.js dest"
  },
  "engines": {
    "node": ">=8.10.0"
  },
  "dependencies": {
    "autoprefixer": "^8.2.0",
    "cheerio": "^1.0.0-rc.2",
    "cpy": "^6.0.0",
    "cpy-cli": "^1.0.1",
    "del-cli": "^1.1.0",
    "glob-exec": "^0.1.1",
    "image-size": "^0.6.2",
    "jimp": "^0.2.28",
    "jstransformer-markdown-it": "^2.0.0",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.2",
    "postcss-clean": "^1.1.0",
    "postcss-cli": "^5.0.0",
    "postcss-import": "^11.1.0",
    "pug": "^2.0.3",
    "pug-cli": "^1.0.0-alpha6",
    "request": "^2.85.0",
    "request-promise-native": "^1.0.5",
    "sanitize.css": "^5.0.0",
    "uglify-js": "^3.3.16"
  },
  "private": true
}
