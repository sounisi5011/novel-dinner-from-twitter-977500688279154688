  "scripts": {
    "clean": "del dest",
    "mkdir": "mkdirp dest",
    "build": "npm-run-all clean -p build:*",
    "build:html": "run-s mkdir build:html:generate",
    "build:html:generate": "pug -p src/pug/main.pug < src/pug/main.pug > dest/index.html",
    "build:css": "run-s mkdir build:css:generate",
    "build:css:generate": "glob-exec --foreach --parallel 'src/css/**/*.css' -- cleancss -O1 'optimizeFontWeight:off' '{{file}}' -o 'dest/{{file.name}}.min{{file.ext}}' --source-map",
    "build:js": "run-s build:js:copy",
    "build:js:copy": "cpy 'src/js/**/*.js' dest"
  },
  "engines": {
    "node": ">=8.10.0"
  },
  "dependencies": {
    "clean-css-cli": "^4.1.11",
    "cpy-cli": "^1.0.1",
    "del-cli": "^1.1.0",
    "glob-exec": "^0.1.1",
    "jstransformer-markdown-it": "^2.0.0",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.2",
    "pug": "^2.0.3",
    "pug-cli": "^1.0.0-alpha6",
    "sanitize.css": "^5.0.0"
  },
  "private": true
}
